<p style="color: green"><%= notice %></p>
<div class='d-flex align-items-center justify-content-center'>
  <h1>Users</h1>
</div>
<div class="border border-primary" style='height:50px; margin: 10px 0px 10px 0px; padding: 10px;'>
  Sample text
</div>  
<div class="card">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td class="col-md-2" >View | Edit | Delete</td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <%= will_paginate @users, inner_window: 1, outer_window: 0 %>
    </div>
</div>
